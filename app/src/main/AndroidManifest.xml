<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplicationDemo.NoActionBar">

        <!-- Home Activity - Màn hình chính sau đăng nhập -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <!-- Create Project Activity - Màn hình tạo project mới -->
        <activity
            android:name=".CreateProjectActivity"
            android:exported="false" />

        <!-- Project Detail Activity - Màn hình chi tiết project -->
        <activity
            android:name=".ProjectDetailActivity"
            android:exported="false" />

        <!-- Member List Activity - Màn hình danh sách members -->
        <activity
            android:name=".MemberListActivity"
            android:exported="false" />

        <!-- Create Task Activity - Màn hình tạo task mới -->
        <activity
            android:name=".CreateTaskActivity"
            android:exported="false" />

        <!-- Task Detail Activity - Màn hình chi tiết task -->
        <activity
            android:name=".TaskDetailActivity"
            android:exported="false" />

        <!-- User Profile Activity - Màn hình xem profile người dùng -->
        <activity
            android:name=".UserProfileActivity"
            android:exported="false" />

        <!-- Global Search Activity - Màn hình tìm kiếm toàn cục -->
        <activity
            android:name=".GlobalSearchActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />


        <!-- Register Activity - Màn hình đăng ký -->
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false" />

        <!-- Login Activity - Launcher, màn hình đầu tiên -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>