<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Avatar người dùng -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/avatar"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle_lightgray"
            android:padding="2dp"
            android:src="@drawable/ic_person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Remove / Ban button -->
        <ImageButton
            android:id="@+id/btnRemoveMember"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/remove_member"
            android:src="@drawable/ic_remove_circle"
            app:tint="@android:color/holo_red_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgAvatar"
            app:layout_constraintBottom_toBottomOf="@id/imgAvatar" />

        <!-- Role -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipRole"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            app:chipCornerRadius="8dp"
            app:chipBackgroundColor="@color/teal_700"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/btnRemoveMember"
            app:layout_constraintTop_toTopOf="@id/imgAvatar"
            app:layout_constraintBottom_toBottomOf="@id/imgAvatar" />

        <!-- Tên đầy đủ -->
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fullname"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintTop_toTopOf="@id/imgAvatar"
            app:layout_constraintEnd_toStartOf="@id/chipRole" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tvFullName"
            app:layout_constraintTop_toBottomOf="@id/tvFullName"
            app:layout_constraintEnd_toEndOf="@id/tvFullName"
            app:layout_constraintBottom_toBottomOf="@id/imgAvatar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
