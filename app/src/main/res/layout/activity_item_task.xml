<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="12dp"
    android:layout_marginBottom="4dp"
    android:elevation="12dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Task title"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnViewTask"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/tvTaskStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="todo"
        android:textSize="12sp"
        android:textColor="#FF5722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvTaskAssignees"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Assignees"
        android:textSize="12sp"
        android:textColor="#666"
        app:layout_constraintStart_toEndOf="@id/tvTaskStatus"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toStartOf="@+id/btnViewTask"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/btnViewTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        app:layout_constraintEnd_toStartOf="@id/cbTaskDone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <CheckBox
        android:id="@+id/cbTaskDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
